<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/FrameLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="0dp" >

    <VideoView
        android:id="@+id/video1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:id="@+id/overlay1"
        android:layout_width="318dp"
        android:layout_height="431dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/trans"
        android:focusable="true"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp"
            android:text="~ COURSE EXAM ~"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="30dp"
            android:typeface="serif" />

        <Button
            android:id="@+id/b1"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="24dp"
            android:clickable="true"
            android:focusable="true"
            android:text="1"
            android:textSize="18dp" />

        <Button
            android:id="@+id/b2"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/b1"
            android:layout_alignBottom="@+id/b1"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp"
            android:clickable="true"
            android:focusable="true"
            android:nextFocusRight="@id/b1"
            android:text="2"
            android:textSize="18dp" />

        <Button
            android:id="@+id/bx"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/b1"
            android:layout_alignBottom="@+id/b1"
            android:layout_centerHorizontal="true"
            android:text="X"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/heading"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:text="WHAT IS THE MODEL NAME"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/t1"
            android:layout_below="@+id/t1"
            android:text="OF THIS MOTORCYCLE"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/t3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/t2"
            android:layout_below="@+id/t2"
            android:text="MODEL ?"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/t4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/t3"
            android:layout_below="@+id/t3"
            android:text=" "
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/t5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/t4"
            android:layout_below="@+id/t4"
            android:text="1.    SUZUKI HUSTLER"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/t6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/t5"
            android:layout_below="@+id/t5"
            android:text="X.    SUZUKI GT750"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/t7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/t6"
            android:layout_below="@+id/t6"
            android:text="2.    SUZUKI CAVALCADE"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </RelativeLayout>

</RelativeLayout><!-- From: file:/Users/gunnarforsgren/AndroidStudioProjects/VideoDemo001/app/src/main/res/layout/main.xml -->